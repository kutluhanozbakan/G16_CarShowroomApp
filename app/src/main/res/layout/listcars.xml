<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/five"
    android:layout_marginStart="@dimen/five"
    android:layout_marginLeft="@dimen/five"
    android:layout_marginTop="@dimen/five"
    android:layout_marginEnd="@dimen/five"
    android:layout_marginRight="@dimen/five"
    android:layout_marginBottom="@dimen/five"
    android:animateLayoutChanges="false"
    android:fadeScrollbars="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/TextView_carStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/grey_tone"
        android:textSize="@dimen/text_twenty" />

    <TextView
        android:id="@+id/TextView_carBrand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/black"
        android:textSize="@dimen/text_twentyFour" />


    <TextView
        android:id="@+id/textView_carType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/text_twenty" />

    <TextView
        android:id="@+id/textView_carCost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light" />

    <TextView
        android:id="@+id/textView_carDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light" />


</LinearLayout>

